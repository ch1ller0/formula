{
    "compilerOptions": {
        "composite": true,
        "allowJs": true,
        "target": "es5",
        "outDir": "./build",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "jsx": "preserve",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "traceResolution": false,
        "listFiles": false,
        "pretty": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2019",
            "dom"
        ],
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@fridgefm-web/typings",
            "src/styles/global.d.ts"
        ],
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": [
        "./node_modules",
        "dist"
    ],
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx"
    ],
    "paths": {
      "@formula": "packages/*"
    }
}